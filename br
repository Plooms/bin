#!/bin/bash
# Adjust brightness of the screen
SCRIPT_NAME="br"
PID=$$

# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT



SELECTION="$(dialog --stdout --checklist "Choose Brightness Level" 13 100 5 \
        "Low-M-1" "" off \
        "Low-M-2" "" off \
        "High"    "" off \
        "Low"     "" off \
        "Normal"  "" off)" 


if [ "$SELECTION" = "Low-M-1" ]
then
	echo "Brightness = Low-M-1" && xrandr --output DVI-I-1 --brightness 0.3 && xrandr --output VGA-1 --brightness 1.0 > /dev/null
	echo -e "\n\n\n OFF [LOW-M-1] LOW-M-2 HIGH LOW "
	notify-send Brightness LOW-M-1

elif [ "$SELECTION" = "Low-M-2" ]
then
	echo "Brightness = Low-M-2" && xrandr --output VGA-1 --brightness 0.3 ; xrandr --output HDMI-1 --brightness 0.3 ; xrandr --output DVI-I-1 --brightness 1.0 > /dev/null
	echo -e "\n\n\n OFF LOW-M-1 [LOW-M-2] HIGH LOW "
	notify-send Brightness LOW-M-2

elif [ "$SELECTION" = "High" ]
then
	echo "Brightness = HIGH" && xrandr --output DVI-I-1 --brightness 1.0 ; xrandr --output VGA-1 --brightness 1.0 ; xrandr --output HDMI-1 --brightness 1.0
	xbrightness 40000 24000 20000
	echo -e "\n\n\n OFF LOW-M-1 LOW-M-2 [HIGH] LOW "
	notify-send Brightness HIGH

elif [ "$SELECTION" = "Low" ]
then
        echo "Brightness = LOW" && xrandr --output DVI-I-1 --brightness 0.1 ; xrandr --output VGA-1 --brightness 0.2 ; xrandr --output HDMI-1 --brightness 0.3 > /dev/null
	echo -e "\n\n\n OFF LOW-M-1 LOW-M-2 HIGH [LOW] "
	notify-send Brightness LOW

elif [ "$SELECTION" = "Normal" ]
then
	echo "Brightness = Normal" && xrandr --output DVI-I-1 --brightness 1.0 && xrandr --output VGA-1 --brightness 1.0
	xbrightness 63000
	echo -e "\n\n\n [Normal] LOW-M-1 LOW-M-2 HIGH LOW "
	notify-send Brightness Normal
fi


#cat $TEMP

#COUNTER=$(($(cat $TEMP) + 1))

 #   echo "increasing by 1"


#COUNTER=$($(cat $TEMP)+1)

# Store the new value
#echo $COUNTER >| $TEMP
#echo $COUNTER

