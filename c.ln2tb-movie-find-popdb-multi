#!/bin/bash
# Populate my DB of Movies


# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT


answer=$(dialog --stdout  --menu \
"Choose the command You Wish to Execute" 15 50 50 \
"1- Add" "" \
"2- Delete" "" \
"3- Find & Check Resolution" "" \
"4- Edit Videos" "" \
"5- Check for Duplicates" "" \
"6- Change Symlinks" "" \
"7- Check Mounts" "" )



case $? in
0)

if [ "$answer" = "1- Add" ]
then c.ln2tb-add


elif [ "$answer" = "2- Delete" ]
then c.ln2tb-delete


elif [ "$answer" = "3- Find & Check Resolution" ]
then c.ln2tb-find


elif [ "$answer" = "4- Edit Videos" ]
then c.ln2tb-video


elif [ "$answer" = "5- Check for Duplicates" ]
then c.ln2tb-dupes


elif [ "$answer" = "6- Change Symlinks" ]
then c.ln2tb-symlinks


elif [ "$answer" = "7- Check Mounts" ]
then c.ln2tb-mount-check




fi

;;
1)
_CANCEL_MSG ;; 
esac
