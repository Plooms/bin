#!/bin/bash
# Search IMDB & KAT for movies gotten through DownThemAll
SCRIPT_NAME="imdb-hunter"
PID=$$


# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT


TMP="$(mktemp)"


cd ~/Downloads/http_/www.imdb.com/title/


echo "Downloading Movie Data for $(ls | wc -l) movies in (~/Downloads/http_/www.imdb.com)"

for MOVIE in *
do
TITLE="$(curl -s http://www.imdb.com/title/"$MOVIE"/ |grep "<title>" |sed 's/<title>//g ; s/<\/title>//g')"

IMDB_NAME="$( echo "$TITLE" | sed 's/(//g;s/)//g;s/&/and/g;s/\ /+/g' )"
YT_NAME="$(   echo "$TITLE" | sed 's/(//g;s/)//g;s/&/and/g;s/\ /+/g' )"
KAT_NAME="$(  echo "$TITLE" | sed "s/(//g;s/)//g;s/\./\+/g;s/&/and/g;s/,/\ /g;s/'//g;s/\!//g" )"

# IMDB
firefox "http://www.imdb.com/title/$MOVIE" 2>&1 >/dev/null
# YT
firefox "www.youtube.com/results?search_query=$YT_NAME&sm=3" 2>&1 >/dev/null
# KAT
firefox "http://kickass.to/usearch/$KAT_NAME" 2>&1 >/dev/null

done
