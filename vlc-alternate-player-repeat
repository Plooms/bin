#!/bin/bash
# Replay last video file if wanted
SCRIPT_NAME="vlc-alternate-player-repeat"
PID=$$


# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT


# Time Calculation
_START_TIME

# Start Lock
_LOCK_ON



#########################################################
TMP="$(mktemp)"
TMP2="$(mktemp)"
TMP3="$(mktemp)"
TMP4="$(mktemp)"


# Get the file name from Last-video.txt
FILE="$(cat "$PLAYER_LAST_WATCHED"/Last-Video.txt | tail -n 1)"

# F_ARRAY = Full file path , eg: /X/X/X.avi
while read a ; do F_ARRAY+=("$a") ; done < <(uniq "$PLAYER_LAST_WATCHED"/Last-Video.txt | tail -n 3)

for i in 0 1 2 ; do basename "${F_ARRAY[$i]}" ; done >> $TMP
sed -i '/^$/d' $TMP

# F2_ARRAY = Filename Only , eg: X.avi
while read b ; do F2_ARRAY+=("$b") ; done <  $TMP

for i in 0 1 2 ; do  echo "${F_ARRAY[$i]}" | rev | cut -d"." -f2- | rev  ; done >> $TMP4
sed -i '/^$/d' $TMP4

# F3_ARRAY = Full File path without extensions , eg: /X/X/X/X
while read c ; do F3_ARRAY+=("$c") ; done <  $TMP4


KODI_LAST_WATCHED="$(ls -t ~/.kodi/userdata/Database/MyVideo* |head -n 1)" &&\
sqlite3  "$KODI_LAST_WATCHED" "select strFilename, playCount from files order by lastPlayed desc;" | head -n100  | sed 's/^|1//g;/|$/d;s/^[ \t]*//;s/[ \t]*$//;/^$/d' | cut -d"|" -f1 >> $TMP2


# Remove All Blank Lines
sed -i '/^$/d' $TMP2

grep --fixed-strings "${F2_ARRAY[2]}" $TMP2 && A="${GREENz}[Y]${COLORz_OFF}  -  ${F2_ARRAY[2]}" || A="${REDz}[N]${COLORz_OFF}  -  ${F2_ARRAY[2]}"
grep --fixed-strings "${F2_ARRAY[1]}" $TMP2 && B="${GREENz}[Y]${COLORz_OFF}  -  ${F2_ARRAY[1]}" || B="${REDz}[N]${COLORz_OFF}  -  ${F2_ARRAY[1]}"
grep --fixed-strings "${F2_ARRAY[0]}" $TMP2 && C="${GREENz}[Y]${COLORz_OFF}  -  ${F2_ARRAY[0]}" || C="${REDz}[N]${COLORz_OFF}  -  ${F2_ARRAY[0]}"


SELECTION="$(dialog --stdout --colors --clear --radiolist \
"Select Video File:   (1 = Newest /  3 = Oldest)" 10 100 5 \
1 "$A" on \
2 "$B" off \
3 "$C" off )"


case $? in
0) 

	case "$SELECTION" in
	1)
	dialog --stdout --checklist "Options for: (  ${F2_ARRAY[2]}  )" 12 100 5 \
		"Repeat Video"				"" off \
		"Remove Video Subtitles"	"" off \
		"Take Notes"				"" off > $TMP3

	grep --fixed-strings "Take Notes" $TMP3 && /usr/local/bin/vlc-note-taker "${F_ARRAY[2]}"
	grep --fixed-strings "Remove Video Subtitles" $TMP3 && rm "${F3_ARRAY[2]}"*.srt && rm "${F3_ARRAY[2]}"*.sub
	grep --fixed-strings "Repeat Video" $TMP3 && export REPEAT=ON && \
	[ ! -z "$A" ] && nohup /usr/local/bin/vlc-alternate-player "${F_ARRAY[2]}" 2>&1 >/dev/null &
	
	;;
	2)
	dialog --stdout --checklist "Options for: (  ${F2_ARRAY[1]}  )" 12 100 5 \
		"Repeat Video"				"" off \
		"Remove Video Subtitles"	"" off \
		"Take Notes"				"" off  > $TMP3

	grep --fixed-strings "Take Notes" $TMP3 && /usr/local/bin/vlc-note-taker "${F_ARRAY[1]}"
	grep --fixed-strings "Remove Video Subtitles" $TMP3 && rm "${F3_ARRAY[1]}"*.srt && rm "${F3_ARRAY[1]}"*.sub
	grep --fixed-strings "Repeat Video" $TMP3 && export REPEAT=ON && \
	[ ! -z "$B" ] && nohup /usr/local/bin/vlc-alternate-player "${F_ARRAY[1]}" 2>&1 >/dev/null &

	
	
	;;
	3)
	dialog --stdout --checklist "Options for: (  ${F2_ARRAY[0]}  )" 12 100 5 \
		"Repeat Video"				"" off \
		"Remove Video Subtitles"	"" off \
		"Take Notes"				"" off > $TMP3

	grep --fixed-strings "Take Notes" $TMP3 && /usr/local/bin/vlc-note-taker "${F_ARRAY[0]}"
	grep --fixed-strings "Remove Video Subtitles" $TMP3 && rm "${F3_ARRAY[0]}"*.srt && rm "${F3_ARRAY[0]}"*.sub
	grep --fixed-strings "Repeat Video" $TMP3 && export REPEAT=ON && \
	[ ! -z "$C" ] && nohup /usr/local/bin/vlc-alternate-player "${F_ARRAY[0]}" 2>&1 >/dev/null &

	esac

;;
1) 
exit 1 ;;
esac



#########################################################

# Time Calculation
_END_TIME

# End Lock
_LOCK_OFF

