#!/bin/bash
# Use medianfo to gather info about video files
SCRIPT_NAME="mediainfo-helper2"
PID=$$


# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT

FNAME="$1"

TMP="$(mktemp)"

if [ ! -f "$FNAME".log ] 
then
mediainfo "$FNAME" > $TMP

cat $TMP | grep -E 'Complete name |File size |Width |Height ' | sed 's/                         :/:/g' > "$FNAME".log
cat $TMP | grep -m 1 'Duration' | sed 's/                         :/:/g' >> "$FNAME".log
cat $TMP | grep 'Overall bit rate' | grep -v 'Overall bit rate mode' | sed 's/                         :/:/g' >> "$FNAME".log
echo "$FNAME".log
fi
