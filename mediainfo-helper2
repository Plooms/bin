#!/bin/bash
# Use medianfo to gather info about video files
SCRIPT_NAME="mediainfo-helper2"
PID=$$


# Source the VAR MOAS
source /usr/local/bin/VAR-SCRIPT

FILE="/home/abz/NAS/Other/Downloads/Download-folder/New Folder/Walker, Texas Ranger - [02x22-23] - Deadly Reunion (1-2).mkv"

TMP="$(mktemp)"

if [ ! -f "$FILE".log ] 
then
mediainfo "$FILE" >| $TMP

echo $TMP | grep -E 'Complete name |File size |Width |Height ' | sed 's/                         :/:/g' >| "$FILE".log
echo $TMP | grep -m 1 'Duration' | sed 's/                         :/:/g' >> "$FILE".log
echo $TMP | grep 'Overall bit rate' | grep -v 'Overall bit rate mode' | sed 's/                         :/:/g' >> "$FILE".log
echo "$FILE".log
fi
